                                                                <tr>
                                                                    <td bgcolor="red" align="center" style="border: 1px solid #f2b844;" class="button-padding-copy">
                                                                        <a href=${link} target="_blank" style="font-size: 16px; font-family: Helvetica, Arial, sans-serif; font-weight: normal; color: #ffffff; text-decoration: none; display: inline-block; padding: 20px;" class="mobile-button">
                                                                            Click here to visit the site !
                                                                        </a>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </td>
    </tr>
